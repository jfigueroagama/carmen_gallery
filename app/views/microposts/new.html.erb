<h1>New micropost</h1>

<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</div>
<div class="field">
	<%= f.text_area :content %>
</div>
<div class="actions">
	<%= f.submit "Submit" %>
</div>
<% end %>
