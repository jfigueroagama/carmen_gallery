<%= form_for(@artwork, :html => { :multipart => true }) do |f| %>
  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% @artwork.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
  	<%= f.label :email, "Artwork Id (email)" %><br />
	<%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :art %><br />
    <%= f.select :art, options_for_select(["painting", "drawing", "print", "tshirt"]), :class => "select" %>
  </div>
  <div class="field">
  	<%= f.label :avatar, "Artwork' image" %><br />
	<%= f.file_field :avatar, :class => "upload" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Save Artwork", :class => "button" %>
  </div>
<% end %>
