<h1>Listing Artworks</h1>

<table>
  <tr>
    <th>Artwork</th>
	<th>Name</th>
    <th>Art</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= image_tag artwork.avatar.url(:thumb) %></td>
	<td><%= artwork.name %></td>
    <td><%= artwork.art %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td class="actions"><%= button_to 'Delete', artwork, :method => :delete, :confirm => "Are you sure?", :class => "button" %></td>
  </tr>
<% end %>
</table>

<br />

